{
  "manifest_version": 3,
  "name": "EzWei - ETH Wei Converter",
  "description": "Convert between Ethereum units (Wei, Gwei, Ether)",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": ["clipboardWrite"]
}
